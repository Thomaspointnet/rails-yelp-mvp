<div class= 'container'>
  <h1>Choose a restaurant</h1>

  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
    <li class="list-group-item"><%= restaurant.name %> - <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%></li>
    <% end %>
  </ul>

  <%= link_to 'add a new restaurant', new_restaurant_path, class: "btn btn-info" %>
</div>
